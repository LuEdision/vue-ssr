{
  "name": "vue2-ssr-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:ssr": "rimraf dist && npm run build:client && npm run build:server",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "build:client": "cross-env NODE_ENV=production vue-cli-service build",
    "build:server": "cross-env NODE_ENV=production WEBPACK_TARGET=node SSR=true vue-cli-service build",
    "clean:lib": "rimraf node_modules",
    "dev": "cross-env NODE_ENV=development node server.js",
    "fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore . --ignore-pattern dist/",
    "server": "cross-env NODE_ENV=development nodemon server.js --exec babel-node",
    "help": "vue-cli-service help",
    "build": "cross-env NODE_ENV=production vue-cli-service build",
    "serve": "cross-env NODE_ENV=development vue-cli-service serve"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "core-js": "^3.8.3",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "lodash": "^4.17.21",
    "register-service-worker": "^1.7.2",
    "vue": "^2.6.14",
    "vue-meta": "^2.4.0",
    "vue-router": "^3.5.1",
    "vue-server-renderer": "^2.7.4",
    "vuex": "^3.6.2",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@babel/node": "^7.16.8",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-pwa": "~5.0.0",
    "@vue/cli-plugin-router": "~5.0.0",
    "@vue/cli-plugin-unit-jest": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/test-utils": "^1.1.3",
    "@vue/vue2-jest": "^27.0.0-alpha.2",
    "babel-jest": "^27.0.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.0.5",
    "lint-staged": "^11.1.2",
    "nodemon": "^1.18.9",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.4.1",
    "sass": "^1.32.7",
    "sass-loader": "^12.0.0",
    "style-resources-loader": "^1.4.1",
    "url-loader": "^4.1.1",
    "vue-loader": "^15.8.3",
    "vue-template-compiler": "^2.7.4",
    "webpack-hot-middleware": "^2.25.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": "vue-cli-service lint"
  }
}
